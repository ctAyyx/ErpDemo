<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <include layout="@layout/toolbar" />

        <com.flyco.tablayout.CommonTabLayout
                android:id="@+id/tabDispatchDetail"
                android:layout_width="200dp"
                app:tl_indicator_color="@color/any_black"
                app:tl_textSelectColor="@color/red"
                app:tl_textUnselectColor="@color/any_black"
                app:tl_textsize="@dimen/text_14"
                app:tl_underline_color="@color/gold"
                android:layout_height="@dimen/dimen_56" />

        <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpDispatchDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>