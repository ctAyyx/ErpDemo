<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  按钮  -->
    <style name="CommonButton" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19dp</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="CommonButton.Blue">
        <item name="android:background">@drawable/selector_common_button_model_blue</item>
        <item name="android:textColor">@color/common_button_text_model_white</item>
    </style>

    <style name="CommonButton.Black">
        <item name="android:background">@drawable/selector_common_button_model_black</item>
        <item name="android:textColor">@color/common_button_text_model_white</item>
    </style>

    <style name="CommonButton.Red">
        <item name="android:background">@drawable/selector_common_button_model_black</item>
        <item name="android:textColor">@color/common_button_text_model_white</item>
    </style>


    <!--  字体  -->
    <style name="ErpText" parent="Widget.AppCompat.TextView" />

    <style name="ErpText.Regular" />

    <style name="ErpText.Bold">
        <item name="android:textStyle">bold</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">700</item>
    </style>


    <!--  弹窗  -->
    <style name="FloatingDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="CommonEdit" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/any_black</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/grey03</item>
        <item name="android:background">@drawable/selector_edit_outline</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>